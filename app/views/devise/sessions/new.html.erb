<section class="login">

  <div class="container">
    <div class="row">

      <div class="col-lg-12 well text-center">

        <h1> A.M. Dash </h1>

        <p>
        To use AM Dash, you'll need to use a Google account.
        </p>
        <p>
        If you don't have one, you can <%= link_to "create one here", "https://www.google.com", target: "_blank" %>.
        </p>

        <p>
        Otherwise...
        </p>

      </div> 

      <hr />

      <div class="col-lg-6 well text-center">
        <p>
        First time using AM Dash?
        </p>
        <%= link_to "Sign up here", user_omniauth_authorize_path(provider: 'google_oauth2'), class: "btn btn-primary btn-lg" %>

      </div> 

      <div class="col-lg-6 well text-center">
        <p>
        Already have an account?
        </p>
        <%= link_to "Log in here", user_omniauth_authorize_path(provider: 'google_oauth2'), class: "btn btn-info btn-lg" %>

      </div> 

    </div> 
  </div> 

</section>
