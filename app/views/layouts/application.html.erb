<!DOCTYPE html>
<html lang="en-US">  
  <head>
    <title>AMDash</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>

    <%= csrf_meta_tags %>
  </head>
  <body>

    <div class="container">
      <% flash.each do |key, value| %>
        <div class="alert <%= bootstrap_class_for(key) %> fade in text-center margin-top-one-em">
          <%= value %>
        </div>
      <% end %>
    </div>

    <%= yield %>

    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>

    <script async defer
      src="https://maps.googleapis.com/maps/api/js?key=<%= ENV['AM_DASH_GOOGLE_BROWSER_KEY'] %>&callback=AMDash.initMap">
    </script>

    <%= yield :javascript_includes %>

  </body>
</html>
