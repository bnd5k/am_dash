<% content_for :javascript_includes do %>
  <%= javascript_include_tag "map.js" %>
<% end %>

<div class="container">

  <div class="header text-center">
    <div class="row">
      <div class="col-lg-12">

        <h1>Good Morning, Ben </h1>

        <h2>
          <%= link_to "signup", "/auth/google_oauth2" %>
