      </div> <!-- /cols -->
    </div> <!-- /row -->
  </div> <!-- /header -->


  <div class="row">

    <!-- start left col -->
    <div class="col-lg-6">

      <section class="date">

        <div class="card">
          <h4> Wednesday, April 6, 2016 </h4>
          <h4> Spokane, WA </h4>
        </div> <!-- /card -->

      </section>

      <section class="weather">
        <div class="card">
          <h2> Weather </h2>

          <div class="current-weather">

